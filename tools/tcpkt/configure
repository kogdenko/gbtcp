#!/bin/sh

CC="gcc"
CFLAGS="-g -Wall -O2 -I. -fPIC"
CFLAGS="$CFLAGS -fdiagnostics-color=always"
OBJS="tcpkt.o tcput.o core.o ip.o"
TCPPK_OBJS="tcpkt.o core.o ip.o"

cat > Makefile <<EOF
.PHONY: tcpkt clean install

all: tcpkt 

CFLAGS = $CFLAGS

OBJS = $OBJS

DEPS = \$(OBJS:.o=.d)

-include \$(DEPS)

%.o: %.c
	\$(CC) -c \$(CFLAGS) -MP -MD -o \$@ \$<

tcpkt: $TCPPK_OBJS
	\$(CC) -o tcpkt \$(CFLAGS) $TCPPK_OBJS

clean:
	rm -f *.o *.d *.core tcpkt 

install: tcpkt
	cp -f tcpkt /usr/local/bin/
EOF
